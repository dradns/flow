<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow
                          http://www.springframework.org/schema/webflow/spring-webflow.xsd">


	<view-state id="main-state" view="flows/main/entrance" >
		<transition on="entrance" to="call_sub" />
	</view-state>

	<subflow-state id="call_sub" subflow="sub" >
		<transition on="error_end" to="main-state" />
		<transition on="success_end" to="end" />
	</subflow-state>

	<end-state id="end" view="externalRedirect:http://localhost:8080"/>

</flow>